{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "suppressImplicitAnyIndexErrors": false,
    "sourceMap": true,
    "declaration": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
